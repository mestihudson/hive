{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^0.21.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@craco/craco": "^6.1.2",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "babel-plugin-module-resolver": "^4.1.0",
    "react-scripts": "4.0.3",
    "web-vitals": "^1.0.1"
  },
  "proxy": "http://api:8080",
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "yarn test:u --ci --watchAll=false && yarn test:i:pact --ci --watchAll=false",
    "test:u": "craco test --roots='test/unit' --verbose --testMatch='**/*.spec.js'",
    "test:i:pact": "craco test --roots='test/integration/pact' --verbose --testMatch='**/*.spec.js'",
    "eject": "craco eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
